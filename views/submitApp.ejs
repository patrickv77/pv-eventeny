<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css"
    />
    <style>
      .descriptionBox {
        height: 600px;
        font-size: 14pt;
      }
    </style>
    <title>Document</title>
  </head>
  <body>
    <h1>Submit an application for the great event known as foodventeny</h1>

    <form action="/api/submission" method="POST">
      <div>
        <div>
          <label for="vendorType">Vendor Type:</label>
            <select id="vendorType" name="vendorType">
              <% vendorTypes.forEach(type => { %>
                <option value="<%= type %>"><%= type.replace('_', ' ') %></option>
              <% }); %>
            </select>
          </select>
        </div>
      </div>
      <div>
        <input
          type="text"
          class="descriptionBox"
          id="description"
          name="description"
          placeholder="Enter a description"
          required
        />
      </div>
      <div>
        <input type="submit" value="Submit" />
      </div>
    </form>
  </body>
</html>
